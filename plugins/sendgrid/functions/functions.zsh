function secure-docker {
    $(boot2docker shellinit 2>/dev/null)
}

#############################################################################
# insecure-docker
#############################################################################
function insecure-docker {
    export DOCKER_HOST=$(boot2docker ip 2>/dev/null):2375
    unset DOCKER_TLS_VERIFY
}
